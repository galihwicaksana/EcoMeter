            android:textColor="@color/primary_light"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/divider4"
            app:layout_constraintEnd_toEndOf="parent"
